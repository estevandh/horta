extends ../layout

block content
	.container
		table
			thead
				tr
					th ID
					th Atuação na Iluminação
					th Atuação na Irrigação
					th Data e Horário
			tbody
				each item in atuacoes
					tr
						td= item.id_atuacao
						td= item.luz
						td= item.agua
						td= item.data_horario
				else
					tr
						td.center(colspan='5') Nenhum tipo de atuação foi feita ainda!
		ul.pagination
			li.disabled
				a(href='#!')
					i.material-icons chevron_left
			li.active
				a(href='#!') 1
			li.waves-effect
				a(href='#!') 2
			li.waves-effect
				a(href='#!') 3
			li.waves-effect
				a(href='#!') 4
			li.waves-effect
				a(href='#!') 5
			li.waves-effect
				a(href='#!')
					i.material-icons chevron_right