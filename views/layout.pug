doctype html
html(lang='en')
	head
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0')
		title Horta da Medora
		// CSS
		link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
		link(href='/css/materialize.css', type='text/css', rel='stylesheet', media='screen,projection')
		link(href='/css/style.css', type='text/css', rel='stylesheet', media='screen,projection')
		
	body
		nav.light-blue.lighten-1(role='navigation')
			.nav-wrapper.container
				a#logo-container.brand-logo(href='#') Horta da Medora
				ul.right.hide-on-med-and-down
					li
						a(href='/cadastro') Cadastrar
					li
						a(href='/medicoes') Medições do Sistema
					li
						a(href='/atuacoes') Atuações do Sistema
				ul#nav-mobile.sidenav
					li
						a(href='/cadastro') Cadastrar
					li
						a(href='/medicoes') Medições do Sistema
					li
						a(href='/atuacoes') Atuações do Sistema
				a.sidenav-trigger(href='#', data-target='nav-mobile')
					i.material-icons menu
					

		block content

		// Scripts
		script(src='https://code.jquery.com/jquery-2.1.1.min.js')
		script(src='/js/materialize.js')
		script(src='/js/init.js')